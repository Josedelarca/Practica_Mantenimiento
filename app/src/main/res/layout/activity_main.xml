<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_gray_bg">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/brand_blue"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestión de Inspección"
        android:textColor="@color/brand_white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="24dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSync"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnSync"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Actualizar datos"
        android:src="@android:drawable/ic_popup_sync"
        app:layout_constraintBottom_toBottomOf="@+id/txtTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtTitulo"
        app:tint="@color/brand_white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnpasar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- INDICADOR DE CARGA (Sincronización de fotos) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSyncStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ProgressBar
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminate="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Subiendo fotos al servidor..."
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- INFO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETALLES DEL SITIO"
                        android:textColor="@color/brand_gray_text"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Seleccione un sitio..."
                        android:textColor="@color/brand_dark_gray"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SELECTOR CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:startIconDrawable="@android:drawable/ic_menu_search">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteCiudades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Buscar sitio..."
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerMapa"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="ABRIR EN GOOGLE MAPS"
                android:textColor="@color/brand_blue"
                android:visibility="gone"
                app:strokeColor="@color/brand_blue"
                app:cornerRadius="12dp"/>

            <!-- SECCIÓN PENDIENTES -->
            <LinearLayout
                android:id="@+id/layoutPendientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="INSPECCIONES PENDIENTES"
                    android:textColor="@color/brand_gray_text"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/containerBotonesPendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnpasar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="EMPEZAR INSPECCIÓN"
        android:backgroundTint="@color/brand_blue"
        android:textColor="@color/brand_white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
