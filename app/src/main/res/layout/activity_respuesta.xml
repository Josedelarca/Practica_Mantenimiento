<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- CABECERA -->
    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#1E2A44"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Captura de Datos"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- INFO CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtSeccionActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECCIÓN"
                android:textColor="#1E2A44"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtPreguntaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando información..."
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- CONTENEDOR PARA CAMPOS DINÁMICOS -->
            <LinearLayout
                android:id="@+id/containerCamposDinamicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txtRequisitosFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mínimo: 0 fotos"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- BOTÓN CÁMARA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubir"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:text="TOMAR FOTOGRAFÍA"
        android:textColor="#1E2A44"
        app:cornerRadius="12dp"
        app:strokeColor="#1E2A44"
        app:icon="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toBottomOf="@id/cardPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LISTA FOTOS (ALTURA CORREGIDA PARA QUE SE VEAN) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFotos"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/btnSubir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_foto" />

    <!-- BOTONES ACCIÓN -->
    <LinearLayout
        android:id="@+id/layoutAcciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:layout_marginBottom="30dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.8"
            android:text="CANCELAR"
            android:textColor="#E53935"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnviar"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1.2"
            android:backgroundTint="#43A047"
            android:text="GUARDAR TODO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
